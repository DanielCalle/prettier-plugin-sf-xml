{
	"name": "sf-xml-formatter",
	"displayName": "sf-xml-formatter",
	"description": "Formatter for metadata files of Salesforce orgs",
	"publisher": "drivero",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sf-xml-formatter.openDocs",
		"onLanguage:xml"
		
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
            {
                "id": "xml",
                "aliases": [
                    "XML"
                ],
                "extensions": [
                    "xml"
                ]
            }
        ],
		"commands": [
			{
				"command": "sf-xml-formatter.openDocs",
				"title": "SF XML FORMATTER: Open docs"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"sort-keys-recursive": "^2.1.1",
		"xml2js": "^0.4.23"
	}
}
